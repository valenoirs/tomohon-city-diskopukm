{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "src/log",
    "src/ignore",
    "copy.ts",
    "_build",
    "ignore"
  ]
}
